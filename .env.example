# App + Base config
NEXT_PUBLIC_ONCHAINKIT_PROJECT_NAME=Base Mini App
NEXT_PUBLIC_URL=https://mini.yourdomain.xyz
NEXT_PUBLIC_THEME_COLOR=#0A0A0A
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Optional, if your app uses this anywhere
NEXT_PUBLIC_ICON_URL=https://mini.yourdomain.xyz/icon.png

# OnchainKit credentials (put secrets in server env, not git)
# If you have a public project ID/API key, leave placeholder and configure in your hosting provider
NEXT_PUBLIC_ONCHAINKIT_API_KEY=pk_onchainkit_placeholder

# Frame/app metadata (use absolute https URLs for images)
NEXT_PUBLIC_APP_ICON=https://mini.yourdomain.xyz/icon.png
NEXT_PUBLIC_APP_SUBTITLE=A simple Farcaster Mini App on Base
NEXT_PUBLIC_APP_DESCRIPTION=Interact on Base directly from Farcaster.
NEXT_PUBLIC_APP_PRIMARY_CATEGORY=productivity

NEXT_PUBLIC_APP_HERO_IMAGE=https://mini.yourdomain.xyz/og/hero.png
NEXT_PUBLIC_APP_SPLASH_IMAGE=https://mini.yourdomain.xyz/og/splash.png
NEXT_PUBLIC_SPLASH_BACKGROUND_COLOR=#0A0A0A

NEXT_PUBLIC_APP_TAGLINE=Do more on Base, faster.
NEXT_PUBLIC_APP_OG_TITLE=Base Mini App
NEXT_PUBLIC_APP_OG_DESCRIPTION=Launch this Mini App in Farcaster.
NEXT_PUBLIC_APP_OG_IMAGE=https://mini.yourdomain.xyz/og/hero.png

# These are request-scoped by Farcaster; keep empty unless you explicitly use them
FARCASTER_HEADER=
FARCASTER_PAYLOAD=
FARCASTER_SIGNATURE=

# Redis (optional)
REDIS_URL=
REDIS_TOKEN=

# Farcaster OAuth provider (fill with your provider; values vary by provider)
AUTH_PROVIDER_AUTHORIZE_URL=
AUTH_PROVIDER_TOKEN_URL=
AUTH_CLIENT_ID=
AUTH_CLIENT_SECRET=
AUTH_REDIRECT_URI=https://mini.yourdomain.xyz/api/auth/callback
AUTH_SCOPE=openid profile offline_access

# Session secret (generate: openssl rand -hex 32)
SESSION_SECRET=change-me

# Environment
NODE_ENV=production

# Remove real keys from VCS. Put secrets in .env.local or your hostâ€™s env panel.
GEMINI_API_KEY=